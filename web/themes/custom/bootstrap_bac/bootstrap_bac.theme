function bootstrap_bac_preprocess_html (&$variables) {
  // Load specific library for pages with html attribute of RTL
  if ($variables['html_attributes']['dir'] == 'rtl') {
    $variables['#attached']['library'][] = 'bootstrap_bac/rtl';
  }
}